package subnet

import (
	"fmt"

	"github.com/Azure/azure-sdk-for-go/arm/network"
)

// Get : Gets a nat object on azure
func (ev *Event) Get() error {
	resp, err := ev.client().Get(ev.ResourceGroupName, ev.VirtualNetworkName, ev.Name, "")
	if err != nil {
		return fmt.Errorf("Error making Read request on Azure Subnet %s: %s", ev.Name, err)
	}
	if resp.StatusCode == http.StatusNotFound {
		d.SetId("")
		return nil
	}

	if resp.Properties.IPConfigurations != nil && len(*resp.Properties.IPConfigurations) > 0 {
		ips := make([]string, 0, len(*resp.Properties.IPConfigurations))
		for _, ip := range *resp.Properties.IPConfigurations {
			ips = append(ips, *ip.ID)
		}

		if err := d.Set("ip_configurations", ips); err != nil {
			return err
		}
	}

	return nil
}
